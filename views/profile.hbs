<section class="profile-page">
  <div class="profile-info">
    <h1>Welcome, {{user.username}}!</h1>
    <a class="new-button button" href="/product/new">Add New Product</a>
  </div>
  
  <h1 class="profile-products-heading">View Your Listed Products</h1>
  <div class="profile-products">
    
      {{#each allProductsFromDB}}
        <div class="item">
          <p>{{this.name}}</p>
          <img class="product-image" src="{{this.image}}" alt="">
          <p>{{this.description}}</p>
          <p>{{this.allergens}}</p>
          <a href="products/edit"><button>Edit</button></a>
          <a href="products/delete"><button>Delete</button></a>
        </div>
      {{/each}}
   
    
  </div>
</section>





