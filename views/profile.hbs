<section class="profile-page">
  <div class="profile-info">
    <h1 class="welcome-message">Welcome, {{user.username}}!</h1>
    <a class="new-button button" href="/product/new">Add New Product</a>
  </div>
  
  
 <div class="profile-products-container">
<h1 class="profile-products-heading">View Your Listed Products</h1>
     <div class="profile-products">
    {{#each allProductsFromDB}}
    <div class="item">
      
      <img class="product-image" src="{{this.image}}">
			<h3>{{this.user.restaurant}}</h3>
			<span>{{this.user.location}}</span>	
      <span>Available: {{this.description}}</span>
      <span>Allergens: {{this.allergens}}</span>
      <div class="profile-button-container">
        <a class="profile-button edit-button" href="/product/edit?product_id={{this._id}}">Edit</a>
        <a class="profile-button delete-button" href="/product/delete?product_id={{this._id}}">Delete</a>
      </div>
      
    </div>
      
    {{/each}}
  </div>
 </div>
    
</section>





