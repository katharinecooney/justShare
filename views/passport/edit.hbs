<section class="edit-page">
  <section class="form-container">
    <h1>Edit Product</h1>
    <form action="/product/edit?product_id={{product._id}}" enctype="multipart/form-data"method="POST">
    
    <label for="description">Description</label>
    <input type="text" name="description" id="description" value="{{product.description}}">

    <label for="">Allergens</label>
    <input type="text" name="allergens" id="allergens" value="{{product.allergens}}">

    <label for="image">Image</label>
    <input type="file" name="image" id="name">

      <button class="form-button" type="submit">Edit product</button>
    </form>
  </section>
</section>

